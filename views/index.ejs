<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="css/design.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Smart Home Application</title>
  </head>
  <%- include('Layouts/menu') -%>
  <body>
 
    <main>
      <h1>Welcome to Smart Home ♡</h1>      
      <div>
        <h3 id="date_display"></h3>
      </div>
      <form id="dashboard_form" action="/update-dashboard" method="POST">
        <div class="user-setting">
          <div>
            <label>Notifications:</label>
            <input name="notifs" type="checkbox" id="notifications" checked />
          </div>
          <div>
            <label>Power Mode:</label>
          </div>
          <div>
            <div>
              <label for="off">Off</label>
              <input type="radio" id="off" name="lighting_mode" value="Off" />
            </div>
            <div>
              <label for="away">Away</label>
              <input type="radio" id="css" name="lighting_mode" value="Away" />
            </div>
            <div>
              <label for="eco">Economy</label>
              <input
                type="radio"
                id="eco"
                name="lighting_mode"
                value="Eco"
                
              />
            </div>
            <div>
              <label for="full">Full</label>
              <input type="radio" id="full" name="lighting_mode" value="Full" />
            </div>
          </div>
          <div>
            <label>Location:</label>
            <input
              name="postals"
              type="text"
              id="location"
              placeholder="Postal Code"
              value="L7W 4T8"
            /><span id="location_error" class="error-span"></span>
          </div>
          <div>
            <label>Temperature:</label>
            <input
              type="number"
              id="temperature"
              name="temperature"
              min="5"
              max="30"
              step="0.5"
              value="21"
            /><span id="temperature_error" class="error-span"></span>
          </div>
          <div>
            <label>Temp Temp!:</label>
            <input
              type="number"
             id="temp"
              name="temptemperature"
              min="5"
             max="30"
              step="0.5"
              value="5"  
            />
          </div>
          <div>
            <label>Temp Timer:</label>
            <input
            type="number"
            id="hour"
            name="tempHour"
            min="0"
            max="24"
            step="1"
            value="0"
            />
            <input
            type="number"
            id="mins"
            name="tempMins"
            min="0"
            max="59"
            step="1"
            value="0"
            />
          </div>
          <div>
            <button type="button" name="temporary" id="temporary">Temporary Temperature</button>
          </div>
          <div>
            <label></label>
            <input type="submit" value="Update" id="update_settings" />
            <input type="reset" value="Reset" id="reset_form" />
          </div>
        </div>
      </form>

      <!-- <br> -->
      <h2 id="currentSetting">Current Settings</h2>
      <div class="user-setting-now">
        <% if (current) {%>
          <div>
            <label>Notifications:&nbsp;</label>
            <span class="current-setting" id="setting_notifications"><%=current.notifs%></span>
          </div>
          <div>
            <label>Lighting Mode:&nbsp;</label>
            <span class="current-setting" id="setting_lighting_mode"><%=current.lighting_mode%></span>
          </div>
          <div>
            <label>Location:&nbsp;</label
            ><span class="current-setting" id="setting_location"><%=current.postals%></span>
          </div>
          <div>
            <label>Temperature:&nbsp;</label
            ><span class="current-setting" id="setting_temperature"><%=current.temperature%></span
            ><span>°C</span>
          </div>
          <%} else {%>
            <div>
              <label>Notifications:&nbsp;</label>
              <span class="current-setting" id="setting_notifications">On</span>
            </div>
            <div>
              <label>Lighting Mode:&nbsp;</label>
              <span class="current-setting" id="setting_lighting_mode">Eco</span>
            </div>
            <div>
              <label>Location:&nbsp;</label
              ><span class="current-setting" id="setting_location">L7W 4T8</span>
            </div>
            <div>
              <label>Temperature:&nbsp;</label
              ><span class="current-setting" id="setting_temperature">21</span
              ><span>°C</span>
            </div>
          <% } %>
          <label>Temperature timer:</label>
          <span class="current-setting" id="setting_timer">00:00:00</span>
        </div>
      </div>
      
    </main>
    <script src="js/dashboard.js"></script>
    <%- include('Layouts/footer') -%>
  </body>
</html>
